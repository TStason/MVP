<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/cat_fact_card">
    <android.support.v7.widget.AppCompatImageView android:id="@+id/catImage"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="10dp"
                                                  android:layout_marginTop="10dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="10dp"
                                                  app:srcCompat="@mipmap/ic_launcher"/>
    <android.support.v7.widget.AppCompatTextView android:id="@+id/catFactOwner"
                                                 android:text="Owner"
                                                 android:textSize="16sp"
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginTop="10dp"
                                                 android:layout_marginStart="25dp"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 app:layout_constraintTop_toBottomOf="@+id/catImage"
                                                 android:layout_marginEnd="25dp"
                                                 app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v7.widget.AppCompatTextView android:id="@+id/catFactText"
                                                 android:text="Fact"
                                                 android:textSize="16sp"
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="10dp"
                                                 android:layout_marginTop="10dp"
                                                 app:layout_constraintTop_toBottomOf="@+id/catFactOwner"
                                                 android:layout_marginEnd="10dp"
                                                 app:layout_constraintEnd_toEndOf="parent"/>
    <android.support.v7.widget.AppCompatTextView android:id="@+id/catDateUpdate"
                                                 android:text="Date update"
                                                 android:textSize="14sp"
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="10dp"
                                                 android:layout_marginBottom="10dp" android:layout_marginTop="10dp"
                                                 app:layout_constraintTop_toBottomOf="@+id/catFactText"/>

</android.support.constraint.ConstraintLayout>